{
  "variables": {
    "iso_checksum": "853f7cb9f0b04569c73d2bd2e2ca98f606abc3f0ca3465413364b1fd1e140fee",
    "atlas_token": "{{env `ATLAS_TOKEN`}}"
  },
  "builders": [
    {
      "vm_name": "nixos64",
      "type": "virtualbox-iso",
      "iso_url": "https://nixos.org/channels/nixos-16.09/nixos-minimal-16.09.1024.c859ea0-x86_64-linux.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "guest_os_type": "Linux_64",
      "boot_command": [
        "<enter>", "<wait10>","<wait5>",
        "echo \"- - L *\" > /root/sda.layout", "<enter>",
        "sfdisk -X gpt /dev/sda < /root/sda.layout", "<enter>",
        "sfdisk -Y dos /dev/sda < /root/sda.layout", "<enter>",
        "mkfs.ext4 -L nixos /dev/sda1", "<enter>",
        "mount /dev/disk/by-label/nixos /mnt", "<enter>",
        "mkdir -p /mnt/etc/nixos", "<enter>",
        "nixos-generate-config --root /mnt", "<enter>",
        "curl -o /mnt/etc/nixos/configuration.nix http://{{ .HTTPIP }}:{{ .HTTPPort }}/configuration.nix && ",
        "nixos-install && ",
        "reboot", "<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": 40000,
      "http_directory": ".",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo -S shutdown -P now",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    }
  ],
  "post-processors": [
    [
    {
      "type": "vagrant",
      "vagrantfile_template": "Vagrantfile.tpl",
      "output": "{{.Provider}}/nixos64.box"
    },
    {
      "type": "atlas",
      "token": "{{user `atlas_token`}}",
      "artifact": "griff/nixos64",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": "virtualbox",
        "created_at": "{{timestamp}}"
      }
    }
    ]
  ]
}
